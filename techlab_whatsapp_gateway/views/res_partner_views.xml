<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend Partner Form View -->
    <record id="view_partner_form_whatsapp" model="ir.ui.view">
        <field name="name">res.partner.form.whatsapp</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Add WhatsApp button to button box -->
            <div name="button_box" position="inside">
                <button name="action_send_whatsapp" type="object" class="oe_stat_button" icon="fa-whatsapp" string="Send WhatsApp"/>
                <button name="action_view_whatsapp_logs" type="object" class="oe_stat_button" icon="fa-envelope" attrs="{'invisible': [('whatsapp_log_count', '=', 0)]}">
                    <field name="whatsapp_log_count" widget="statinfo" string="WhatsApp"/>
                </button>
            </div>
            
            <!-- Add WhatsApp field in contact details -->
            <field name="mobile" position="after">
                <field name="whatsapp_number" widget="phone"/>
            </field>
        </field>
    </record>

    <!-- Extend Partner Tree View -->
    <record id="view_partner_tree_whatsapp" model="ir.ui.view">
        <field name="name">res.partner.tree.whatsapp</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <field name="mobile" position="after">
                <field name="whatsapp_number" optional="hide"/>
            </field>
        </field>
    </record>
</odoo>
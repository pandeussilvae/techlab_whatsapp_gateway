<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- WhatsApp Gateway Tree View -->
    <record id="view_whatsapp_gateway_tree" model="ir.ui.view">
        <field name="name">whatsapp.gateway.tree</field>
        <field name="model">whatsapp.gateway</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="type"/>
                <field name="active"/>
                <field name="log_count"/>
            </tree>
        </field>
    </record>

    <!-- WhatsApp Gateway Form View -->
    <record id="view_whatsapp_gateway_form" model="ir.ui.view">
        <field name="name">whatsapp.gateway.form</field>
        <field name="model">whatsapp.gateway</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_view_logs" type="object" string="View Logs" class="btn-primary" attrs="{'invisible': [('log_count', '=', 0)]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_logs" type="object" class="oe_stat_button" icon="fa-list">
                            <field name="log_count" widget="statinfo" string="Logs"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="type" widget="radio" options="{'horizontal': true}"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- External Gateway Tree View -->
    <record id="view_whatsapp_external_gateway_tree" model="ir.ui.view">
        <field name="name">whatsapp.external.gateway.tree</field>
        <field name="model">whatsapp.external.gateway</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="url"/>
                <field name="method"/>
                <field name="active"/>
                <field name="log_count"/>
            </tree>
        </field>
    </record>

    <!-- External Gateway Form View -->
    <record id="view_whatsapp_external_gateway_form" model="ir.ui.view">
        <field name="name">whatsapp.external.gateway.form</field>
        <field name="model">whatsapp.external.gateway</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_view_logs" type="object" string="View Logs" class="btn-primary" attrs="{'invisible': [('log_count', '=', 0)]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_logs" type="object" class="oe_stat_button" icon="fa-list">
                            <field name="log_count" widget="statinfo" string="Logs"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="url" placeholder="https://api.example.com/send"/>
                            <field name="method"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="recipient_param"/>
                            <field name="message_param"/>
                            <field name="api_key_param"/>
                            <field name="api_key_value" password="True"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Headers" name="headers">
                            <field name="headers" placeholder='{"Content-Type": "application/json", "Authorization": "Bearer YOUR_TOKEN"}'/>
                        </page>
                        <page string="Parameters Template" name="params_template">
                            <field name="params_template" placeholder='{"to": "{phone}", "message": "{message}", "api_key": "{api_key}"}'/>
                            <p class="text-muted">
                                Use placeholders: {phone}, {message}, {api_key}
                            </p>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Meta Gateway Tree View -->
    <record id="view_whatsapp_meta_gateway_tree" model="ir.ui.view">
        <field name="name">whatsapp.meta.gateway.tree</field>
        <field name="model">whatsapp.meta.gateway</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone_number_id"/>
                <field name="sender_name"/>
                <field name="active"/>
                <field name="log_count"/>
            </tree>
        </field>
    </record>

    <!-- Meta Gateway Form View -->
    <record id="view_whatsapp_meta_gateway_form" model="ir.ui.view">
        <field name="name">whatsapp.meta.gateway.form</field>
        <field name="model">whatsapp.meta.gateway</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_view_logs" type="object" string="View Logs" class="btn-primary" attrs="{'invisible': [('log_count', '=', 0)]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_logs" type="object" class="oe_stat_button" icon="fa-list">
                            <field name="log_count" widget="statinfo" string="Logs"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="phone_number_id"/>
                            <field name="sender_name"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="access_token" password="True"/>
                            <field name="endpoint_template" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions for External Gateway -->
    <record id="action_whatsapp_external_gateway" model="ir.actions.act_window">
        <field name="name">External REST Gateways</field>
        <field name="res_model">whatsapp.external.gateway</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first External REST Gateway!
            </p>
            <p>
                External gateways allow you to send WhatsApp messages through third-party REST APIs
                like 360dialog, Ultramsg, Gupshup, and others.
            </p>
        </field>
    </record>

    <!-- Actions for Meta Gateway -->
    <record id="action_whatsapp_meta_gateway" model="ir.actions.act_window">
        <field name="name">Meta Cloud API Gateways</field>
        <field name="res_model">whatsapp.meta.gateway</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Meta Cloud API Gateway!
            </p>
            <p>
                Meta gateways allow you to send WhatsApp messages directly through
                the official WhatsApp Cloud API from Meta/Facebook.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_whatsapp_external_gateway" 
              name="External REST" 
              parent="menu_whatsapp_gateways" 
              action="action_whatsapp_external_gateway" 
              sequence="10"/>

    <menuitem id="menu_whatsapp_meta_gateway" 
              name="Meta Cloud API" 
              parent="menu_whatsapp_gateways" 
              action="action_whatsapp_meta_gateway" 
              sequence="20"/>
</odoo>